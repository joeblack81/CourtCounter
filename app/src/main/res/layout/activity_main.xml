<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:id="@+id/teamAName"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Away"
        android:id="@+id/teamBName"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/teamAScore"
        android:layout_below="@+id/teamAName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="61dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/teamBScore"
        android:layout_alignBaseline="@+id/teamAScore"
        android:layout_alignBottom="@+id/teamAScore"
        android:layout_alignRight="@+id/teamB2points"
        android:layout_alignEnd="@+id/teamB2points" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ 2 Points"
        android:id="@+id/teamA2points"
        android:layout_below="@+id/teamAScore"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="55dp"
        android:onClick="onClick"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ 3 Points"
        android:id="@+id/teamA3points"
        android:layout_below="@+id/teamA2points"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClick"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+1 Point"
        android:id="@+id/teamA1point"
        android:layout_below="@+id/teamA3points"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClick"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ 2 Points"
        android:id="@+id/teamB2points"
        android:layout_above="@+id/teamB3points"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="add2ForTeamB"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ 3 Points"
        android:id="@+id/teamB3points"
        android:layout_above="@+id/teamB1point"
        android:layout_toLeftOf="@+id/teamBScore"
        android:layout_toStartOf="@+id/teamBScore"
        android:onClick="add3ForTeamB"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ 1 Point"
        android:id="@+id/teamB1point"
        android:layout_below="@+id/teamA3points"
        android:layout_alignRight="@+id/teamB3points"
        android:layout_alignEnd="@+id/teamB3points"
        android:onClick="add1ForTeamB"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESET"
        android:id="@+id/reset"
        android:onClick="reset"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="undo"
        android:id="@+id/undo"

        android:onClick="undo"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
